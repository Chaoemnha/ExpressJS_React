<!-- users.ejs -->
<!DOCTYPE html>
<html>
<head>
  <title>Danh sách người dùng</title>
  <style>
    table {
      width: 100%;
      border-collapse: collapse;
    }
    
    th, td {
      padding: 8px;
      text-align: left;
      border-bottom: 1px solid #ddd;
    }
    
    th {
      background-color: #f2f2f2;
    }
  </style>
</head>
<body>
  <h1>Danh sách người dùng</h1>
  <table>
    <thead>
      <tr>
        <th>Tên</th>
        <th>Tuổi</th>
        <th>Hành động</th>
      </tr>
    </thead>
    <tbody>
      <% users.forEach(function(user) { %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.age %></td>
          <td>
            <a href="/user/delete/<%= user._id %>">Xóa</a>
            <a href="/user/edit/<%= user._id %>">sửa</a>
        </td>
        </tr>
      <% }); %>
    </tbody>
  </table>
</body>
</html>
